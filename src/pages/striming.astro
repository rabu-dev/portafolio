---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---


<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <h1 class="title">Streaming</h1>
            <p class="description">En este proyecto se muestra una serie de videos que se estan reproduciendo en streaming.</p>
            <div class="center-iframe">
                <iframe src="https://player.kick.com/rabu-dev" height="720" width="1280" frameborder="0" scrolling="no" allowfullscreen="true"></iframe>
            </div>
		</main>
		<Footer />
	</body>
	<style>
        .center-iframe {
            display: flex;
            justify-content: center;
        }

        .center-iframe iframe{
            width: calc(1280/2);
            height: 20em;
        }

        .title {
            text-align: center;
        }

        .description {
            text-align: center;
        }

	</style>
</html>